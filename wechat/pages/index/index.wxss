swiper{
    height:400rpx;
}
swiper-item{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color:#fff;
}
swiper-item:nth-of-type(2n){
    background: #cc0;
}
swiper-item:nth-of-type(2n+1){
    background: #0cc;
}

.tabs{
    width:100%;
    height:60rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.tabs text{
    flex: 1;
    width:100%;
    height:100%;
    background: #c0c;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-right: 1px solid #ccc;
    box-sizing: border-box;
    color:#fff;
}

.tabs text:last-child{
    border:none;
}

.tabs .selected{
    background: red;
}

.tabs-content swiper-item:nth-of-type(2n){
    background: #a8f;
}

.tabs-content swiper-item:nth-of-type(2n + 1){
    background: #fa8;
}