swiper {
    height: 400rpx;
}

swiper-item {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color: #fff;
}

swiper-item:nth-of-type(3n) {
    background: #8492a6;
}

swiper-item:nth-of-type(3n+1) {
    background: #f7ba2a;
}

swiper-item:nth-of-type(3n+2) {
    background: #1d8ce0;
}

swiper-item:nth-of-type(3n+3) {
    background: #ff4949;
}

swiper-item text {
    color: #fff;
}

.tabs {
    width: 100%;
    height: 60rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.tabs text {
    flex: 1;
    width: 100%;
    height: 100%;
    background: #c0c;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-right: 1px solid #ccc;
    box-sizing: border-box;
    color: #fff;
}

.tabs text:last-child {
    border: none;
}

.tabs .selected {
    background: red;
}

.tabs-content view:nth-of-type(4n) swiper-item {
    background: #1d8ce0;
}

.tabs-content view:nth-of-type(4n+1) swiper-item {
    background: #ff4949;
}

.tabs-content view:nth-of-type(4n+2) swiper-item {
    background: #13ce66;
}

.tabs-content view:nth-of-type(4n+3) swiper-item {
    background: #1f2d3d;
}

.amount view {
    display: flex;
    flex-direction: row;
    margin: 20rpx 0;
}

.amount view text {
    display: block;
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    border: 1px solid #ccc;
}

.amount view text:nth-of-type(2) {
    width: 160rpx;
    border-left: none;
    border-right: none;
}

.box {
    width: 600rpx;
    overflow: hidden;
    background: linear-gradient(to right, #8492a6, #475669);
    margin: 40rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-radius: 10px;
    box-shadow: 0 4px 8px 0 #ccc, 0 6px 20px 0 #aaa;
}

.box text {
    font-size: 14px;
    color: #fff;
    line-height: 30px;
    font-family: '微软雅黑';
}
