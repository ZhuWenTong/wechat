swiper{
    height:400rpx;
}
swiper-item{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color:#fff;
}
swiper-item:nth-of-type(2n){
    background: #13CE66;
}
swiper-item:nth-of-type(2n+1){
    background: #F7BA2A;
}

.tabs{
    width:100%;
    height:60rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.tabs text{
    flex: 1;
    width:100%;
    height:100%;
    background: #c0c;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-right: 1px solid #ccc;
    box-sizing: border-box;
    color:#fff;
}

.tabs text:last-child{
    border:none;
}

.tabs .selected{
    background: red;
}

.tabs-content view:nth-of-type(2n) swiper-item{
    background: #1D8CE0;
}

.tabs-content view:nth-of-type(2n+1) swiper-item{
    background: #FF4949;
}

.amount view{
    display: flex;
    flex-direction: row;
    margin: 20rpx 0;
}

.amount view text{
    display: block;
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    border: 1px solid #ccc;
}

.amount view text:nth-of-type(2){
    width: 160rpx;
    border-left: none;
    border-right: none;
}

.box{
    width: 600rpx;
    overflow: hidden;
    background: linear-gradient(to right,#58B7FF,#20A0FF);
    margin: 40rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.box text{
    font-size: 14px;
    color: #fff;
    line-height: 30px;
    font-family: '微软雅黑';
}
