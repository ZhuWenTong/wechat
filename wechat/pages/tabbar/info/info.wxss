.content,.userinfo{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.userinfo button {
    margin-top: 100rpx;
    background: none;
    border: none;
    border: 1px solid #ccc;
    width: 200rpx;
    height: 200rpx;
    text-align: center;
    line-height: 200rpx;
    border-radius: 50%;
}
.content image{
    width:200rpx;
    height:200rpx;
    border-radius: 50%;
    margin-top:100rpx;
}

text{
    margin-top: 40rpx;
    font-size: 28rpx;
}

.avatar {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
}