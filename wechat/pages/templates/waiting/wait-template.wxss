.wrap-waiting {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1000;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background: rgba(0, 0, 0, 0.5);
}
.waiting {
    width: 100px;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}
.cir {
    width: 30px;
    height: 30px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.cir view {
    border-radius: 50%;
    animation: wait 0.9s;
    animation-iteration-count: infinite;
}
.cir:nth-of-type(1) view {
    background: #F56C6C;
    animation-delay: 0;
}
.cir:nth-of-type(2) view {
    background: #409EFF;
    animation-delay: 0.3s;
}
.cir:nth-of-type(3) view {
    background: #67C23A;
    animation-delay: 0.6s;
}
@keyframes wait {
    0% {opacity: 0;width: 15px;height: 15px;}
    50% {opacity: 1;width: 30px;height: 30px;}
    100% {opacity: 0;width: 15px;height: 15px;}
}